---
layout: layouts/page.njk
title: Change Log
---

{%- import 'components/partials.njk' as el -%}

{%- call el.heading(title=title,lead='Nerdy data incoming...') %}{%- endcall %}

<section>
  <ol class="mx-auto w-full max-w-2xl">
    {%- for commit in collections.recentChanges %}
    <li class="flex">
      <hgroup class="pb-10 w-full text-end">
        <h2 class="mb-1 text-sm leading-6 font-black"><time>{{ commit.authorDate | dateOnly }}</time></h2>
        <p class="text-xs opacity-70">#{{ commit.abbrevHash }}</p>
      </hgroup>
      <div class="px-5 flex-(& col shrink-0) items-center">
        <a href="https://github.com/craigerskine/web920.com/commit/{{ commit.hash }}" class="w-6 h-6 border-(1 gray-500/20) bg-gray-500/10 flex-(& shrink-0) items-center justify-center rounded-full">#</a>
        {%- if not loop.last %}  
        <i class="w-px bg-current flex-1 opacity-20"></i>
        {%- endif %}
      </div>
      <article class="pb-10 w-full">
        <p class="mb-1 leading-6">{{ commit.subject }}</p>
        <p class="text-xs opacity-70">{{ commit.authorName }}</p>
      </article>
    </li>
    {%- endfor %}
  </ol>
</section>