---
layout: layouts/default.njk
---

{%- import 'components/partials.njk' as el -%}

<section class="relative">
  <svg class="h-full w-full stroke-current absolute inset-0 top-0 opacity-10 [mask-image:radial-gradient(65vw_32rem_at_center,white,transparent)]" aria-hidden="true">
    <defs>
      <pattern id="pattern-mast-grid" width="150" height="150" x="50%" y="-1" patternUnits="userSpaceOnUse">
        <rect width="150" height="150" fill="none" />
      </pattern>
    </defs>
    <rect width="100%" height="100%" stroke-width="0" fill="url(#pattern-mast-grid)" class="-rotate-3" />
  </svg>
  <div class="-ml-24 absolute left-1/2 right-0 inset-y-0 transform-gpu overflow-hidden blur-3xl lg:(ml-24) xl:(ml-48)" aria-hidden="true">
    <div class="w-[50.0625rem] aspect-[801/1036] bg-gradient-to-tr from-gray-100 to-gray-500 opacity-30" style="clip-path: polygon(60% 30%, 100% 18%, 75% 5%, 50% 0%, 45% 5%, 50% 25%, 60% 50%, 55% 60%, 40% 55%, 30% 45%, 35% 80%, 0% 95%, 40% 100%, 35% 80%, 95% 50%, 60% 30%)"></div>
  </div>
  <div class="overflow-hidden relative">
    <div class="mx-auto max-w-7xl px-6 pt-36 pb-32 sm:(pt-60) lg:(px-8 pt-32)">
      <div class="mx-auto max-w-2xl gap-x-14 lg:(mx-0 flex max-w-none items-center)">
        <div class="w-full max-w-xl lg:(shrink-0 max-w-2xl)">
          <h1 class="text-(gray-900 4xl) text-wrap-balance font-black tracking-tight sm:(text-6xl)">
            {{ home_page.hero.heading }}
          </h1>
          <p class="mt-6 text-(gray-600 lg) text-wrap-balance leading-8 relative sm:(max-w-md) lg:(max-w-none)">
            {{ home_page.hero.lead }}
          </p>
          <div class="mt-12 flex items-center gap-x-6">
            <a href="{{ '/events/' | url }}" class="btn btn-brand">Coming events</a>
            <a href="{{ '/920ers/' | url }}" class="btn group text-(gray-900 sm) font-semibold leading-6">920ers <span aria-hidden="true" class="inline-block motion-safe:(transition) group-hover:(translate-x-1)">â†’</span></a>
          </div>
        </div>
        {%- macro pic(img='01') %}
        <div class="relative -rotate-3 motion-safe:(transition hover:(animate-blob)) hover:(rotate-0)">
          <img src="/_assets/img/hero/{{ img }}.jpg" alt="photo {{ img }}" class="w-full aspect-[2/3] bg-gray-900/5 object-cover rounded-xl shadow-lg">
          <div class="pointer-events-none absolute inset-0 rounded-xl ring-(1 inset gray-900/10)"></div>
        </div>
        {%- endmacro %}
        <div class="mt-14 flex justify-end gap-8 sm:(-mt-44 pl-20 justify-start) lg:(mt-0 pl-0)">
          <div class="ml-auto pt-32 w-44 flex-none space-y-8 sm:(ml-0 pt-80) lg:(order-last pt-36) xl:(order-none pt-80)">
            {{ pic(img='01') }}
          </div>
          <div class="mr-auto w-44 flex-none space-y-8 sm:(mr-0 pt-52) lg:(pt-36)">
            {{ pic(img='02') }}
            {{ pic(img='03') }}
          </div>
          <div class="w-44 flex-none space-y-8 pt-32 sm:(pt-0)">
            {{ pic(img='04') }}
            {{ pic(img='05') }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-12 px-6 bg-slate-500/5 lg:(mx-6 rounded-2xl)">
  <div class="mx-auto w-full max-w-xl space-y-12 lg:(max-w-screen-2xl)">
    <div class="lg:(mr-auto max-w-6xl)">
      {%- call el.heading(tag='h2',title=home_page.activities.heading) %}{%- endcall %}
      {%- call el.list() %}
        {%- for item in home_page.activities.items %}
          {{ el.list_item(title=item.title,desc=item.desc,ico=item.ico,color='brand') }}
        {%- endfor %}
      {%- endcall %}
    </div>
    <div class="lg:(ml-auto max-w-6xl)">
      {%- call el.heading(tag='h2',title=home_page.topics.heading) %}{%- endcall %}
      {%- call el.list() %}
        {%- for item in home_page.topics.items %}
          {{ el.list_item(title=item.title,desc=item.desc,ico=item.ico,color='accent') }}
        {%- endfor %}
      {%- endcall %}
    </div>
  </div>
</section>

<section class="py-24 px-6 sm:(py-32)">
  <div class="mx-auto max-w-7xl">
    <h3 class="pt-8 text-(gray-500 base center) tracking-tight font-bold md:(text-2xl)">{{ home_page.sponsors.heading }}</h3>
    <div class="mx-auto max-w-sm mt-6 grid-(& cols-1) gap-0.5 overflow-hidden rounded-2xl md:(max-w-none grid-cols-3)">
      {%- for item in home_page.sponsors.items %}      
        <a href="{{ item.url | url }}" class="group p-4 bg-black/10 text-gray-500 sm:(p-10) dark:(bg-opacity-50)">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 60" width="200" height="60" role="img" class="mx-auto w-full max-w-[150px] h-auto fill-current motion-safe:(group-hover:(animate-blob)) md:(max-w-[200px])">
            <title>{{ item.title }}</title>
            {{ item.logo | safe }}
          </svg>
        </a>
      {%- endfor %}
    </div>
  </div>
</section>