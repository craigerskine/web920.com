---
layout: layouts/page.njk
title: Merch
eleventyNavigation:
  title: Buy
  order: 3
eleventyComputed:
  lead: "{{ merch_page.lead }}"
  eleventyNavigation:
    key: "{{ title }}"
---

{%- import 'components/partials.njk' as el -%}

{%- call el.heading(title=title,lead=lead) %}
  <div class="flex-(& col) items-center gap-2 md:(ml-auto flex-none)">
    <a href="https://www.teepublic.com/t-shirt/50222322-web920" class="btn btn-accent">Buy merch</a>
    <small class="flex items-center gap-2"><iconify-icon icon="mdi:storefront-outline" inline class="iconify text-lg opacity-50"></iconify-icon> Support the site</small>
  </div>
{%- endcall %}

<ul class="grid-(& cols-2) gap-10 md:(grid-cols-3)">
  {% for item in merch_page.items %}  
  <li>
    <a href="{{ item.url | url }}" class="group block space-y-2 motion-safe:(transition) [&:hover,&:focus]:(-rotate-2)">
      <picture><img src="/_assets/img/merch/{{ item.title | slugify }}.jpg" alt="{{ item.title }} with logo" class="aspect-video object-(cover top) rounded-lg motion-safe:(transition) group-hover:(bg-brand-500 ring-(4 brand-500/100))" /></picture>
      <p class="font-bold">{{ item.title }}</p>
    </a>
  </li>
  {% endfor %}
</ul>